{
  "title": "Retail Bank - Sample Dashboard",
  "layout": [
    {
      "id": "kpi_total_volume",
      "type": "kpi",
      "title": "Total Transaction Volume",
      "value_field": "amount",
      "agg": "sum"
    },
    {
      "id": "kpi_monthly_avg",
      "type": "kpi",
      "title": "Average Transaction (abs)",
      "value_field": "amount",
      "agg": "mean_abs"
    },
    {
      "id": "kpi_fraud_count",
      "type": "kpi",
      "title": "Number of Fraudulent Transactions",
      "value_field": "fraud_flag",
      "agg": "sum"
    },
    {
      "id": "chart_monthly_trend",
      "type": "line",
      "title": "Monthly Net Amount",
      "date_field": "transaction_date",
      "value_field": "amount",
      "time_granularity": "M"
    },
    {
      "id": "chart_top_merchants",
      "type": "bar",
      "title": "Top Merchants by Absolute Amount",
      "group_field": "merchant",
      "value_field": "amount",
      "top_n": 5
    },
    {
      "id": "chart_category_breakdown",
      "type": "pie",
      "title": "Category Breakdown",
      "group_field": "category",
      "value_field": "amount"
    },
    {
      "id": "chart_account_type_distribution",
      "type": "bar",
      "title": "Transactions by Account Type",
      "group_field": "account_type",
      "value_field": "amount"
    },
    {
      "id": "chart_country_distribution",
      "type": "pie",
      "title": "Transaction Distribution by Country",
      "group_field": "country",
      "value_field": "amount"
    },
    {
      "id": "chart_transaction_status",
      "type": "bar",
      "title": "Transaction Status Breakdown",
      "group_field": "transaction_status",
      "value_field": "amount"
    },
    {
      "id": "chart_scatter_age_amount",
      "type": "scatter",
      "title": "Transaction Amount vs Age",
      "x_field": "customer_age",
      "y_field": "amount",
      "color_field": "fraud_flag"
    },
    {
      "id": "chart_histogram_amount",
      "type": "histogram",
      "title": "Transaction Amount Distribution",
      "value_field": "amount",
      "bins": 30
    },
    {
      "id": "chart_heatmap_country_status",
      "type": "heatmap",
      "title": "Transaction Status by Country",
      "x_field": "transaction_status",
      "y_field": "country",
      "value_field": "amount"
    }
  ]
}
